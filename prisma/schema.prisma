// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  // MongoDB ObjectId for the unique identifier
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  // User attributes
  email    String   @unique
  password String
  name     String?
  address  Address?
  posts    Post[]
}

model Post {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  // Post attributes
  title    String
  body     String
  // Author Relation
  author   User   @relation(fields: [authorId], references: [id])
  authorId String @db.ObjectId
}

// Address is an embedded document
type Address {
  street String
  city   String
  state  String
  zip    String
}
